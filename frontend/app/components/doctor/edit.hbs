<h1 class='text-3xl'>Edit Doctor</h1>
<div class="rentals">
<form {{on "submit" (fn this.editDoctor @doctor)}}>
  <dl>
    <dt>Naam : </dt>
    <dd>
      <Input @value={{@doctor.naam}} @placeholder="naam" required />
    </dd>
    <dt>Straat :</dt>
    <dd>
      <Input @value={{@doctor.straat}} @placeholder="straat" required />
    </dd>
    <dt>Huisnummer :</dt>
    <dd>
      <Input @value={{@doctor.huisnr}} @placeholder="huisnr" required />
    </dd>
    <dt>Postcode :</dt>
    <dd>
      <Input @value={{@doctor.huisnr}} @placeholder="postcode" required />
    </dd>
    <dt>Gemeente :</dt>
    <dd>
      <Input @value={{@doctor.gemeente}} @placeholder="gemeente" required />
    </dd>
    <dt>Type :</dt>
    <dd>
      <Input @value={{@doctor.type}} @placeholder="type" required />
    </dd>
  </dl>
  <button class="button" type="submit">Save</button>
</form>
</div>
{{outlet}}